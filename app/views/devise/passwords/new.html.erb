<div class = "col-sm-offset-2">
	<h2>Forgot your password?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post ,class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <label for="inputemail" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-4">
  		<%= f.email_field :email, autofocus: true ,id: "inputemail"%>
		</div>
  </div>
  <div class="form-group ">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
    	<%= f.submit "Send me reset password instructions" , :class =>"btn btn-default" %>
    </div>
  </div>
<% end %>
<div class="form-group ">
  <div class="col-sm-2"></div>
  <div class="col-sm-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
