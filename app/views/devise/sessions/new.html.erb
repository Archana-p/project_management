<div class = "col-sm-offset-2">
<h2>Log in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name) , html:{class: "form-horizontal"}) do |f| %>

  <div class="form-group ">
    <label for="email2" class=" col-sm-2 control-label"> Email</label>
    <div class="col-sm-6">
     <%= f.email_field :email, autofocus: true,id:"email2" %>
    </div>
  </div>

  <div class="form-group ">
    <label for="password2" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-6">
     <%= f.password_field :password, autocomplete: "off",id: "password2" %>
    </div>
  </div>

 	<div class="form-group ">
  	<% if devise_mapping.rememberable? -%>
  	  <div class="col-sm-2 "></div>
    	<div class="col-sm-6"><%= f.check_box :remember_me %> <%= f.label :remember_me %>
    	</div>
  	<% end -%>
  </div>

  <div class="form-group ">
  	 <div class="col-sm-2 "></div>
  	<div class="col-sm-6">
   		<%= f.submit "Log in" , class: "btn btn-default" %>
   	</div>
  </div>
<% end %>

<div class="form-group ">
  <div class="col-sm-2 "></div>
  <div class="col-sm-6">
    <%= render "devise/shared/links" %>
  </div>
</div>
