<div class = "col-sm-offset-2">
<h2>Sign up</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name) ,html:{class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <div class= "col-sm-2 "></div>
   <div style ="color:red;">
      <%= resource.errors.full_messages.collect(&:humanize).join(", ") %>
    </div>
  </div>
  <div class="form-group ">
    <label for="name1" class="col-sm-2 control-label"> Name</label>
    <div class="col-sm-6">
     <%= f.text_field :name , id:"name1" %>
    </div>
  </div>

  <div class="form-group">
    <label for="email1" class="col-sm-2 control-label"> Email</label>
    <div class="col-sm-6">
     <%= f.email_field :email, autofocus: true , id:"email1"%>
    </div>
  </div>

  <div class="form-group">
    <label for="password1" class="col-sm-2 control-label"> Password</label>
    <div class="col-sm-6">
      <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
      <%= f.password_field :password, autocomplete: "off", id:"password1" %>
    </div>
  </div>
  
  <div class="form-group">
    <label for="pconfirm" class="col-sm-2 control-label">Confirm Password</label>
    <div class="col-sm-6">
     <%= f.password_field :password_confirmation, autocomplete: "off",id:"pconfirm" %>
    </div>
  </div>
  <div class="form-group">
    <div class ="col-sm-2"></div>
    <div class="col-sm-6">
      <%= f.submit "Sign up" , class: "btn btn-default"%>
    </div>
  </div>
<% end %>
 <div class="form-group">
    <div class ="col-sm-2"></div>
    <div class="col-sm-6">
     <%= render "devise/shared/links" %>
    </div>
  </div>
