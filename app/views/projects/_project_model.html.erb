
<!-- Modal -->

<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4 class="modal-title" id="project_model_lable">  
      <% if @project.new_record?%>
      Create Project
      <%else%>
      <%=@project.title.titleize%>
      <%end%>
      </h4>
    </div>
    <div class="modal-body modal-lg">
      <%= render partial: 'form'%>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal" id ="close">Close</button>
      <% if @project.new_record?%>
        <button type="button" class="btn btn-primary"  id="save_project">Save</button>
      <%else%>
        <button type="button" class="btn btn-primary"  id="Update_project">Update</button>
      <%end%>
      <%#= f.submit "Save",class: 'btn btn-primary' %>
    </div>
  </div>
</div>

